<Window x:Class="PracticaLineas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaLineas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Polyline Name="sol" StrokeThickness="4" Stroke="Yellow" />
        
        <Polyline Name="cuadrado" StrokeThickness="4" Stroke="Aqua" />
        
        <Polyline Name="rectangulo" StrokeThickness="4" Stroke="Red" />

        <Polyline Name="ventana" StrokeThickness="4" Stroke="Purple" />

        <Polyline Name="triangulo" StrokeThickness="4" Stroke="Gold" />

        <Polyline Name="tronco" StrokeThickness="4" Stroke="Brown" />

        <Polyline Name="hojas" StrokeThickness="4" Stroke="Green" />

        <Polyline Name="cesped" StrokeThickness="4" Stroke="Green" />


    </Grid>
</Window>
